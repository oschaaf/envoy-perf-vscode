{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "start-build-cache",
            "type": "shell",
            "command": "go run github.com/buchgr/bazel-remote --dir ${HOME}/bazel_cache --host 127.0.0.1 --port 28080 --max_size 150 &",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "debug-build",
            "type": "shell",
            "command": "bazel build  -c dbg //:nighthawk_client nighthawk_test_server nighthawk_service",
            "options": {
                "cwd": "nighthawk"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "debug-build-test",
            "type": "shell",
            "command": "bazel build  -c dbg //test/...",
            "options": {
                "cwd": "nighthawk"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "opt-build",
            "type": "shell",
            "command": "bazel build  -c opt //:nighthawk_client nighthawk_test_server",
            "options": {
                "cwd": "nighthawk"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "bazel ci coverage",
            "type": "shell",
            "command": "../tools/run_docker.sh 'ci/do_ci.sh coverage'",
            "options": {
                "cwd": "nighthawk"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "bazel ci tsan",
            "type": "shell",
            "command": "../tools/run_docker.sh 'ci/do_ci.sh tsan'",
            "options": {
                "cwd": "nighthawk"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "bazel ci asan",
            "type": "shell",
            "command": "../tools/run_docker.sh 'ci/do_ci.sh asan'",
            "options": {
                "cwd": "nighthawk"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clang-tidy via docker",
            "type": "shell",
            "command": "../tools/run_docker.sh 'ci/do_ci.sh clang_tidy'",
            "options": {
                "cwd": "nighthawk"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "asan test direct",
            "type": "shell",
            "command": "ci/do_ci.sh asan",
            "options": {
                "cwd": "nighthawk"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "tsan test direct",
            "type": "shell",
            "command": "BAZEL_TEST_OPTIONS='' ci/do_ci.sh tsan",
            "options": {
                "cwd": "nighthawk"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "opt-build-test",
            "type": "shell",
            "command": "bazel build  -c opt //test:nighthawk_test",
            "options": {
                "cwd": "nighthawk"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build",
            "type": "shell",
            "command": "bazel build  -c fastbuild //:nighthawk_client",
            "options": {
                "cwd": "nighthawk"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build-test",
            "type": "shell",
            "command": "bazel build  -c fastbuild //test/...",
            "options": {
                "cwd": "nighthawk"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "bazel-run-all-tests-direct",
            "type": "shell",
            "command": "bazel test --cache_test_results=no -c dbg //test/...",
            "options": {
                "cwd": "nighthawk"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "bazel //test:*",
            "type": "shell",
            "command": "bazel test --cache_test_results=no  --jobs 160 -c dbg //test:*"
            "options": {
                "cwd": "nighthawk"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "bazel //test:nighthawk_test repeat ServiceTest.BackToBackExecution",
            "type": "shell",
            "command": "bazel test --cache_test_results=no --test_env=ENVOY_IP_TEST_VERSIONS=all --runs_per_test=2500 --test_arg=--gtest_filter='IpVersions/ServiceTest.BackToBackExecution/IPv6' --jobs 500 -c dbg --local_resources 80000,500,0.25 //test:service_test",
            "options": {
                "cwd": "nighthawk"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "bazel //test:nighthawk_test repeat ServiceTest all 5000x",
            "type": "shell",
            "command": "bazel test --cache_test_results=no --test_env=ENVOY_IP_TEST_VERSIONS=all --runs_per_test=5000 --test_arg=--gtest_filter='IpVersions/ServiceTest.*/*' --jobs 500 -c dbg --local_resources 80000,500,0.25 //test:service_test",
            "options": {
                "cwd": "nighthawk"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "bazel //test:nighthawk_test repeat all",
            "type": "shell",
            "command": "bazel test --cache_test_results=no --test_env=ENVOY_IP_TEST_VERSIONS=all --runs_per_test=2000 --jobs 500 -c dbg --local_resources 80000,500,0.25 //test:*",
            "options": {
                "cwd": "nighthawk"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "bazel-integration-test",
            "type": "shell",
            "command": "bazel test --test_env=ENVOY_IP_TEST_VERSIONS=all --cache_test_results=no  -c dbg //test/integration:integration_test",
            "options": {
                "cwd": "nighthawk"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "bazel-test-server-tests",
            "type": "shell",
            "command": "bazel test --cache_test_results=no -c dbg //test/server:http_test_server_filter_integration_test",
            "options": {
                "cwd": "nighthawk"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "bazel //test/...",
            "type": "shell",
            "command": "bazel test --cache_test_results=no -c dbg //test/...",
            "options": {
                "cwd": "nighthawk"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "do-ci-test",
            "type": "shell",
            "command": "../tools/run_docker.sh 'ci/do_ci.sh test'",
            "options": {
                "cwd": "nighthawk"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "fix-format-docker",
            "type": "shell",
            "command": "../tools/run_docker.sh 'ci/do_ci.sh check_format'",
            "options": {
                "cwd": "nighthawk"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "direct-run-test",
            "type": "shell",
            "dependsOn": "debug-build-test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "options": {
                "env": {
                    "TEST_WORKSPACE": ".",
                    "TEST_TMPDIR": "/tmp/foo",
                    "TEST_SRCDIR": "${workspaceRoot}/nighthawk",
                    "ENVOY_IP_TEST_VERSIONS": "all"
                },
                "cwd": "nighthawk"
            },
            "command": "bazel-bin/test/nighthawk_test",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "direct-run-test-with-gdb",
            "type": "shell",
            "dependsOn": "debug-build-test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "env": {
                    "TEST_WORKSPACE": ".",
                    "TEST_TMPDIR": "/tmp/foo",
                    "TEST_SRCDIR": "${workspaceRoot}/nighthawk",
                    "ENVOY_IP_TEST_VERSIONS": ""
                },
                "cwd": "nighthawk/nighthawk"
            },
            "command": "gdb --args bazel-bin/nighthawk/test/nighthawk_test",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "simple-valgrind-run-direct",
            "type": "shell",
            "dependsOn": "debug-build",
            "command": "nighthawk/tools/valgrind.sh",
            "options": {
                "cwd": "nighthawk"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "callgrind-test-coverage",
            "type": "shell",
            "dependsOn": "debug-build-test",
            "command": "valgrind --tool=callgrind --collect-jumps=yes bazel-bin/nighthawk/test/nighthawk_test",
            "options": {
                "env": {
                    "TEST_WORKSPACE": ".",
                    "TEST_TMPDIR": "/tmp/foo",
                    "TEST_SRCDIR": "${workspaceRoot}/nighthawk",
                    "ENVOY_IP_TEST_VERSIONS": ""
                },
                "cwd": "nighthawk"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "valgrind-run-test-direct",
            "type": "shell",
            "dependsOn": "debug-build-test",
            "command": "tools/valgrind-tests.sh",
            "options": {
                "cwd": "nighthawk"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "setup third party includes",
            "type": "shell",
            "command": "./symlink-ide-headers.sh",
        }
    ]
}