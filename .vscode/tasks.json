{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "debug-build",
            "type": "shell",
            "command": "PATH=/usr/lib/llvm-7/bin:$PATH CC=clang CXX=clang++ bazel build --disk_cache=/home/oschaaf/bazel-build-cache/ -c dbg //:nighthawk_client",
            "options": {
                "cwd": "envoy-perf/nighthawk"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "debug-build-test",
            "type": "shell",
            "command": "PATH=/usr/lib/llvm-7/bin:$PATH CC=clang CXX=clang++ bazel build --disk_cache=/home/oschaaf/bazel-build-cache/ -c dbg //test:nighthawk_test",
            "options": {
                "cwd": "envoy-perf/nighthawk"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "opt-build",
            "type": "shell",
            "command": "PATH=/usr/lib/llvm-7/bin:$PATH CC=clang CXX=clang++ bazel build --disk_cache=/home/oschaaf/bazel-build-cache/ -c opt //:nighthawk_client",
            "options": {
                "cwd": "envoy-perf/nighthawk"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "opt-build-test",
            "type": "shell",
            "command": "PATH=/usr/lib/llvm-7/bin:$PATH CC=clang CXX=clang++ bazel build --disk_cache=/home/oschaaf/bazel-build-cache/ -c opt //test:nighthawk_test",
            "options": {
                "cwd": "envoy-perf/nighthawk"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build",
            "type": "shell",
            "command": "PATH=/usr/lib/llvm-7/bin:$PATH CC=clang CXX=clang++ bazel build --disk_cache=/home/oschaaf/bazel-build-cache/ -c fastbuild //:nighthawk_client",
            "options": {
                "cwd": "envoy-perf/nighthawk"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build-test",
            "type": "shell",
            "command": "PATH=/usr/lib/llvm-7/bin:$PATH CC=clang CXX=clang++ bazel build --disk_cache=/home/oschaaf/bazel-build-cache/ -c fastbuild //test:nighthawk_test",
            "options": {
                "cwd": "envoy-perf/nighthawk"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "bazel-run-test",
            "type": "shell",
            "command": "PATH=/usr/lib/llvm-7/bin:$PATH CC=clang CXX=clang++ bazel test --disk_cache=/home/oschaaf/bazel-build-cache/  --cache_test_results=no -c fastbuild //test:nighthawk_test",
            "options": {
                "cwd": "envoy-perf/nighthawk"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "direct-run-test",
            "type": "shell",
            "dependsOn": "build-test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "env": {
                    "TEST_WORKSPACE": ".",
                    "TEST_SRCDIR": "${workspaceRoot}/envoy-perf/nighthawk",
                    "ENVOY_IP_TEST_VERSIONS": "v4only"
                },
                "cwd": "envoy-perf/nighthawk"
            },
            "command": "bazel-bin/test/nighthawk_test",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "direct-run-test-with-gdb",
            "type": "shell",
            "dependsOn": "debug-build-test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "env": {
                    "TEST_WORKSPACE": ".",
                    "TEST_SRCDIR": "${workspaceRoot}/envoy-perf/nighthawk",
                    "ENVOY_IP_TEST_VERSIONS": "v4only"
                },
                "cwd": "envoy-perf/nighthawk"
            },
            "command": "gdb --args bazel-bin/test/nighthawk_test",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "simple-valgrind-run-direct",
            "type": "shell",
            "dependsOn": "debug-build",
            "command": "./tools/valgrind.sh",
            "options": {
                "cwd": "envoy-perf/nighthawk"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "valgrind-run-test-direct",
            "type": "shell",
            "dependsOn": "debug-build-test",
            "command": "./tools/valgrind-tests.sh",
            "options": {
                "cwd": "envoy-perf/nighthawk"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "setup third party includes",
            "type": "shell",
            "command": "./symlink-ide-headers.sh",
        }
    ]
}